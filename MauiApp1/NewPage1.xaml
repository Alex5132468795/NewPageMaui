<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.NewPage1"
             Title="NewPage1">
    <VerticalStackLayout>
        <Image
            x:Name="image"
            WidthRequest="50"
            HeightRequest="50">
        </Image>
        <Label
            x:Name="name"
            TextColor="White"
            BackgroundColor="Red"
            HeightRequest="20">

        </Label>
        <Label
            x:Name="secondName"
            TextColor="White"
            BackgroundColor="Red"
            HeightRequest="20">

        </Label>
        <Label
            x:Name="fatherName"
            TextColor="White"
            BackgroundColor="Red"
            HeightRequest="20">
            
        </Label>
    </VerticalStackLayout>
</ContentPage>